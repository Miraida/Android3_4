<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Android3_4" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="title_text_style">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="lineHeight">19sp</item>
        <item name="fontFamily">@font/barlow</item>
    </style>
    <style name="sub_title_text_style">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="lineHeight">10sp</item>
        <item name="fontFamily">@font/barlow</item>
    </style>
</resources>